 class maths {
   int a;
  
   maths(int a){
       this.a=a;

   }
   public String is(){
       String numberstr=String.valueOf(a); //String التحويل الي 
       char firstChar= numberstr.charAt(0);//firsChar اخذ ال
       int firstDigit= Character.getNumericValue(firstChar);
       if(firstDigit%2==0){
           return "even";
       }
       else {
           return "odd";
       }
      
   }
}
public class Main{
    
    public static void main(String []args){
        maths num=new maths(5);
        String result =num.is();
        System.out.print(result);
    }
}


