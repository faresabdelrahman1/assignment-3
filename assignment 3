O Calculator



class maths {
    int A ;
    int B;
   String S;
    public maths(int A,int B,String S){
        this.A=A;
        this.B=B;
        this.S=S;n
    }
    public int let(){
        if(S.equals("+")){
            return A+B;
        }
        else if(S.equals("-")){
            return A-B;
        }
        else if(S.equals("*")){
        return A * B;
        }
        else {
            if(B!=0){
           return A / B;
            }
        }
        return 0;
    } 
}
public class Main{
    
    public static void main(String []args){
        maths a=new maths(2,5,"+");
        int result =a.let();
      System.out.print(result);
    }
}

